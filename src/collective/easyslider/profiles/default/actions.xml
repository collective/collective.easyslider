<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool">
    <action-provider name="portal_actions">

        <action title="Enable Slider" action_id="enable_slider" category="object_buttons"
            condition_expr="python: not path('object/@@slider_util').view_enabled() and not path('object/@@slider_util').enabled()"
            url_expr="string:${object_url}/@@enable_slider" visible="True">
            <permission>collective.easyslider: Manage slider settings</permission>
        </action>

        <action title="Disable Slider" action_id="disable_slider" category="object_buttons"
            condition_expr="python: not path('object/@@slider_util').view_enabled() and path('object/@@slider_util').enabled()"
            url_expr="string:${object_url}/@@disable_slider" visible="True">
            <permission>collective.easyslider: Manage slider settings</permission>
        </action>

        <action title="Enable Slider View" action_id="enable_slider_view" category="object_buttons"
            condition_expr="python: path('object/@@slider_util').view_enableable()"
            url_expr="string:${object_url}/@@enable_slider_view" visible="True">
            <permission>collective.easyslider: Manage slider settings</permission>
        </action>

        <action title="Disable Slider View" action_id="disable_slider_view" category="object_buttons"
            condition_expr="python: path('object/@@slider_util').view_enabled() and not path('object/@@slider_util').enabled()"
            url_expr="string:${object_url}/@@disable_slider_view" visible="True">
            <permission>collective.easyslider: Manage slider settings</permission>
        </action>

        <action title="Slider Settings" action_id="slider_settings" category="object"
            condition_expr="object/@@slider_util/enabled"
            url_expr="string:${object_url}/@@slider-settings" visible="True">
            <permission>collective.easyslider: Manage slider settings</permission>
        </action>

        <action title="Slider Settings" action_id="view_slider_settings" category="object"
            condition_expr="object/@@slider_util/view_enabled"
            url_expr="string:${object_url}/@@view-slider-settings" visible="True">
            <permission>collective.easyslider: Manage slider settings</permission>
        </action>

    </action-provider>
</object>