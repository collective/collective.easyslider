<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:gs="http://namespaces.zope.org/genericsetup"
  i18n_domain="collective.easyslider">

  <gs:upgradeStep
    title="Upgrade collective.easyslider to 0.3rc2 from 0.3rc1"
    description="collective.easyslider upgrade step"
    source="0.3rc1"
    destination="0.3rc2"
    handler=".upgrades.upgrade_from_0_3rc1__to__0_3rc2"
    profile="collective.easyslider:default" />

  <gs:upgradeStep
    title="Upgrade collective.easyslider to 0.3rc2"
    description="collective.easyslider upgrade step"
    source="*"
    destination="0.3rc2"
    handler=".upgrades.upgrade_to_0_3rc2"
    profile="collective.easyslider:default" />

  <gs:upgradeStep
    title="Upgrade collective.easyslider to 0.3rc4"
    description="collective.easyslider upgrade step"
    source="*"
    destination="0.3rc4"
    handler=".upgrades.upgrade_to_0_3rc4"
    profile="collective.easyslider:default" />

  <gs:upgradeStep
    title="Upgrade collective.easyslider to 0.3"
    description="collective.easyslider upgrade step"
    source="*"
    destination="0.3"
    handler=".upgrades.upgrade_to_0_3"
    profile="collective.easyslider:default" />

  <gs:upgradeStep
    title="Upgrade collective.easyslider to 0.4.0"
    description="collective.easyslider upgrade step"
    source="*"
    destination="0.4.0"
    handler=".upgrades.upgrade_to_0_4_0"
    profile="collective.easyslider:default" />

  <gs:upgradeStep
    title="Upgrade collective.easyslider to 0.4.1"
    description="collective.easyslider upgrade step"
    source="*"
    destination="0.4.1"
    handler=".upgrades.upgrade_to_0_4_1"
    profile="collective.easyslider:default" />

  <gs:upgradeStep
    title="Upgrade collective.easyslider to 0.5.4"
    description="collective.easyslider upgrade step"
    source="*"
    destination="0.5.4"
    handler=".upgrades.upgrade_to_0_5_4"
    profile="collective.easyslider:default" />

  <gs:upgradeStep
    title="Upgrade collective.easyslider role map"
    description="Update role mapping for Site Administrator role"
    source="*"
    destination="2"
    handler=".upgrades.upgrade_rolemap"
    profile="collective.easyslider:default" />

  <gs:upgradeStep
    title="Upgrade collective.easyslider global settings"
    description="Update collective.easyslider to have a global settings page"
    source="*"
    destination="3"
    handler=".upgrades.upgrade_controlpanel"
    profile="collective.easyslider:default" />

  <gs:upgradeStep
    title="Upgrade collective.easyslider to collection type"
    description="Update collective.easyslider to be used with new collection type"
    source="*"
    destination="4"
    handler=".upgrades.upgrade_collection"
    profile="collective.easyslider:default" />

</configure>
