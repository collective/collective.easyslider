<tal:show tal:condition="view/show" tal:define="uid context/UID|string:nouid">
  <div id="slider-container" tal:attributes="class string:slider-${uid};" tal:define="slides view/slides">
    <div id="slider" tal:attributes="class string:slider-${uid};">
      <ul class="slider-list">
        <tal:rep tal:repeat="slide slides">
          <li class="slide" tal:content="structure python: view.render_slide(slide)" />
        </tal:rep>
      </ul>
    </div>
  </div>
</tal:show>
